<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:orientation="horizontal"
    android:layout_height="60dp">
<TextView
    android:id="@+id/cat_item_nav_title"
    android:layout_width="0dp"
    android:layout_weight="4"
    android:layout_height="45dp"
    android:textColor="@android:color/white"
    android:gravity="start|center_vertical"
    android:layout_marginStart="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp">

</TextView>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:layout_height="match_parent">
        <ImageButton
            android:gravity="center"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_clear_accent_24dp"
            android:id="@+id/cat_item_nav_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/delete_category_description" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:layout_height="match_parent">
    <ImageButton
        android:background="@android:color/transparent"
        android:gravity="center"
        app:srcCompat="@drawable/nav_cat_edit_32dp"
        android:layout_gravity="center"
        android:id="@+id/cat_item_nav_edit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="@string/edit_nav_cat_item"
        android:contentDescription="@string/edit_category_title" />
    </FrameLayout>
</LinearLayout>